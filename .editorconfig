root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space

[*.{cs,tt}]
charset = utf-8-bom
indent_size = 4
trim_trailing_whitespace = true

[*.{xml,*proj,targets,props}]
indent_size = 2
trim_trailing_whitespace = true

[*.cs]

