<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CleanCompilerGeneratedFilesBeforeCompile>false</CleanCompilerGeneratedFilesBeforeCompile>
  </PropertyGroup>

  <Target Name="SetCompilerGeneratedFilesOutputPath" BeforeTargets="CleanCompilerGeneratedFiles" Condition="'$(EmitCompilerGeneratedFiles)' == 'true'">
    <PropertyGroup>
      <CompilerGeneratedFilesOutputPath>$([System.IO.Path]::Combine('$(IntermediateOutputPath)', 'generated'))</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>
  </Target>

  <Target Name="CleanCompilerGeneratedFiles" BeforeTargets="CreateCompilerGeneratedFilesOutputPath" Condition="'$(EmitCompilerGeneratedFiles)' == 'true' and '$(CompilerGeneratedFilesOutputPath)' != '' and '$(CleanCompilerGeneratedFilesBeforeCompile)' == 'true'">
    <Delete Files="$([System.IO.Path]::Combine('$(CompilerGeneratedFilesOutputPath)', '**\*')" />
  </Target>

  <ItemGroup>
    <CompilerVisibleProperty Include="DebugGenerator" />
    <CompilerVisibleProperty Include="GenerateObjectEquals" />
    <CompilerVisibleProperty Include="GenerateEquatable" />
    <CompilerVisibleProperty Include="GenerateGenericComparable" />
    <CompilerVisibleProperty Include="GenerateNonGenericComparable" />
    <CompilerVisibleProperty Include="GenerateEqualityOperators" />
    <CompilerVisibleProperty Include="GenerateComparisonOperators" />
    <CompilerVisibleProperty Include="GenerateEqualityContract" />
  </ItemGroup>

  <ItemGroup>
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateObjectEquals" />
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateEquatable" />
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateGenericComparable" />
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateNonGenericComparable" />
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateEqualityOperators" />
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateComparisonOperators" />
    <CompilerVisibleItemMetadata Include="Compile" MetadataName="GenerateEqualityContract" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\src\ComparableGenerator\ComparableGenerator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

</Project>
